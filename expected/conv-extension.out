-- SJIS to UTF8 and EUC_JP
CREATE TABLE sjis (sjis text, utf8 text, euc_jp text);
INSERT INTO sjis SELECT i,
       encode(convert(decode(i, 'hex'), 'SJIS', 'UTF8'), 'hex'),
       encode(convert(decode(i, 'hex'), 'SJIS', 'EUC_JP'), 'hex')
  FROM (VALUES ('8476'),
               ('82a0'),
               ('f040'),
               ('f1fc'),
               ('f38d'),
               ('f39e'),
               ('f39f'),
               ('f4fc'),
               ('f540'),
               ('f9fc')) AS t(i)
  RETURNING *;

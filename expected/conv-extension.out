-- UTF8 to SJIS and EUC_JP
CREATE TABLE utf8 (utf8 text, sjis text, euc_jp text);
INSERT INTO utf8 SELECT i,
       encode(convert(decode(i, 'hex'), 'UTF8', 'SJIS'), 'hex') AS sjis,
       encode(convert(decode(i, 'hex'), 'UTF8', 'EUC_JP'), 'hex') AS euc_jp
  FROM (VALUES ('d191'),
               ('e38182'),
               ('ee8080'),
               ('ee85b7'),
               ('ee8a80'),
               ('ee8a91'),
               ('ee8a92'),
               ('ee8eab'),
               ('ee8eac'),
               ('ee9d97')) AS t(i)
  RETURNING *;
